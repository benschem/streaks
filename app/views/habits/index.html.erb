<ul>
  <% @habits.each do |habit| %>
    <li><%= link_to habit.name, habit_path(habit) %></li>
    <li>🔥 <%= habit.current_streak %> days | 🏆 <%= habit.longest_streak %> days</li>
    <li>🚫 <%= habit.current_gap %> days | 🏆 <%= habit.longest_gap %> days</li>
    <li>Completion rate: <%= habit.completion_rate %>%</li>
  <% end %>
</ul>
